export UNICODESETTING
export DEBUG
export WXWIN

USAGE="Usage $0 trunk|2.8 unicode|ansi [debug]"

if test "x$1" = "xtrunk"; then
	WXWIN=~/wx/trunk
elif test "x$1" = "x2.8"; then
	#WXWIN=~/wx/wxMac-2.8.10
	WXWIN=~/wx/wxWidgets-2.8.11
else
	echo $USAGE
	return
fi

if test "x$2" = "xunicode"; then
	UNICODESETTING="-unicode"
elif test "x$2" = "xansi"; then
	UNICODESETTING="-ansi"
else
	echo $USAGE
	return
fi

if test "x$3" = "xdebug"; then
	DEBUG="-debug"
fi

export PATH=$WXWIN/build${UNICODESETTING}${DEBUG}:$PATH
echo $PATH
