export BUILDDIR
export WXWIN

USAGE="Usage $0 trunk|2.8 [release|debug] [carbon]"

if test "x$1" = "xtrunk"; then
	WXWIN=~/wx/trunk
elif test "x$1" = "x2.8"; then
	WXWIN=~/wx/wxWidgets-2.8.12
else
	echo $USAGE
	return
fi
BUILDDIR="$WXWIN/build"

if test "x$3" = "xcarbon"; then
	BUILDDIR+="-carbon"
else
	BUILDDIR+="-cocoa"
fi

if test "x$2" = "xdebug"; then
	BUILDDIR+="-debug"
elif test "x$2" = "xrelease"; then
	DUMMY=0
else
	echo $USAGE
	return
fi

export PATH=$BUILDDIR:$PATH
echo $PATH
