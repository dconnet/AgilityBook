################################################################################
# Variables required by the global make rules.                                 #
################################################################################
# TOPSRCDIR   - Points to the top level directory of the project.              #
# SRCDIR      - Points to the actual directory where the source code files for #
#               this Makefile exists.                                          #
# VPATH       - Directory to look for source files if not in the current       #
#               directory.  Must be equal to SRCDIR.                           #
# TOPBUILDDIR - The top level directory we initially ran make from, used for   #
#               generating nice output of the working directories.             #
################################################################################
TOPSRCDIR   = @top_srcdir@
SRCDIR      = @srcdir@
VPATH       = @srcdir@
TOPBUILDDIR = ./@top_builddir@

##########
# Compile flags, list include directories
##########
INCLUDES += -I$(TOPSRCDIR)/src/Include -I$(TOPSRCDIR)/src/3rdParty/LibFmt/include -I$(TOPSRCDIR)/src/3rdParty/LibTidyHtml/include -I$(SRCDIR)/src -I$(SRCDIR)/tidy/include -I$(SRCDIR)/tidy/src -DSUPPORT_UTF16_ENCODINGS -DSUPPORT_ASIAN_ENCODINGS -DSUPPORT_ACCESSIBILITY_CHECKS

##########
# List of programs and archives to link
##########
ARCHIVES = libtidyhtml

##########
# Source files for each target
##########
libtidyhtml_SRCS = src/LibTidyHtml.cpp \
	tidy/src/access.c \
	tidy/src/alloc.c \
	tidy/src/attrdict.c \
	tidy/src/attrs.c \
	tidy/src/buffio.c \
	tidy/src/charsets.c \
	tidy/src/clean.c \
	tidy/src/config.c \
	tidy/src/entities.c \
	tidy/src/fileio.c \
	tidy/src/gdoc.c \
	tidy/src/istack.c \
	tidy/src/language.c \
	tidy/src/lexer.c \
	tidy/src/mappedio.c \
	tidy/src/message.c \
	tidy/src/messageobj.c \
	tidy/src/parser.c \
	tidy/src/pprint.c \
	tidy/src/sprtf.c \
	tidy/src/streamio.c \
	tidy/src/tagask.c \
	tidy/src/tags.c \
	tidy/src/tidylib.c \
	tidy/src/tmbstr.c \
	tidy/src/utf8.c

##########
# Extra libraries for link stage (only if needed)
##########
#tidyhtml_LIBS =
# prog1_LDFLAGS = -L/path/to/extralib

##########
# Precompiled headers
##########
#PRECOMP_HEADER = $(TOPSRCDIR)/src/3rdParty/LibTidyHtml/stdafx.h


##########
# Stuff to install
##########
#INSTALL_BIN = libtidyhtml
#INSTALL_MAN = prog1.5

@NAM_RULES@

